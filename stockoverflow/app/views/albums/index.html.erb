<h1>Albums</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Description</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @albums.each do |album| %>
  <div>
    <h2><%= album.title %></h2>
    <% if album.photos.first %>
      <%= link_to image_tag(album.photos.first.image), album %>
    <% else %>
      <%= link_to "No Pictures in album", album %>
    <%end %>
    <p><%= album.description %></p>
    <hr>
  </div>

<% end %>
</table>

<br />

<%= link_to 'New Album', new_album_path %>
