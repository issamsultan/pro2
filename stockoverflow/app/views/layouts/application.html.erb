<!DOCTYPE html>
<html>
<head>
  <title>Stockoverflow</title>
  <%= javascript_include_tag "application" %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <link href='http://fonts.googleapis.com/css?family=Magra' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Inder' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Lato:300,400,700' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
</head>

<body>
  <header>
    <div id="header">

      <div id="title">
        <h1>
          <%= link_to 'stock', root_path%><a class="bold">overflow</a>
        </h1>
      </div>

      <div id="links">
        <% if current_user %>
          <div class="button"><%= link_to 'Logout', destroy_user_session_path, method: :delete  %></div>
        <% else %>
          <div class="button"><%= link_to 'Login', user_session_path %></div>
          <div class="button"><%= link_to 'Sign Up', new_user_registration_path, method: :get %></div>
        <% end %>
          <a href="albums#index"><div class="button">Albums</div></a>
        <% if current_user %>
          <a href="photos/new"><div class="button" id="upbut">Upload</div></a>
        <% end %>
      </div>
        <p class="button" id="hello">Hello <%= current_user.email if current_user %></p>
    </div>
  </header>

  <div id="infoban">
    <% if current_user %>
      <div id="notif">
      </div>
    <% else %>
      <div id="welcome">
        <div id="what"><p>StockOverflow is a question and answer site for professional and enthusiast photographers. It's 100% free, no registration required.</p></div>
        <div id="expcont">
          <div class="exp"></div>
          <div class="exp"></div>
          <div class="exp"></div>
        </div>
      </div>
    <% end %>
  </div>

  <div id="page-wrap">

    <div id="centre">
      <%= yield %>
    </div>

  </div>

</body>
</html>
