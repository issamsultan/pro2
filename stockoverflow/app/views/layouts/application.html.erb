<!DOCTYPE html>
<html>
<head>
  <title>Stockoverflow</title>
  <%= javascript_include_tag "application" %>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <link href='http://fonts.googleapis.com/css?family=Magra' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Inder' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Lato:300,400,700' rel='stylesheet' type='text/css'>
  <%= csrf_meta_tags %>
</head>

<body>
  <header>
    <div id="header">

      <div id="title">
        <h1>
          <%= link_to 'stock', root_path%><a class="bold">overflow</a>
        </h1>
      </div>

      <div id="links">
        <% if current_user %>
          <p class="button">Hello <%= current_user.email %></p>
          <p class="button"><%= link_to 'logout', destroy_user_session_path, method: :delete  %></p>
        <% else %>
          <p class="button"><%= link_to 'login', user_session_path %></p>
          <p class="button"><%= link_to 'Sign Up', new_user_registration_path, method: :get %></p>
        <% end %>
          <a href="albums#index"><div class="button">Albums</div></a>
        <% if can? :create, @photo %>
          <a href="photos/new"><div class="button" id="upbut">Upload</div></a>
        <% end %>
      </div>
    
    </div>
  </header>

  <div id="page-wrap">

    <div id="centre">
      <%= yield %>
    </div>

  </div>

</body>
</html>
